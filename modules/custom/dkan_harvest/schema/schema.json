{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dkan-harvest-source",
  "type": "object",
  "title": "DKAN Harvest Source Config",
  "required": [
    "sourceId",
    "source",
    "transforms",
    "load"
  ],
  "properties": {
    "sourceId": {
      "type": "string",
      "title": "The Sourceid for the Harvest Source",
      "pattern": "^(.*)$"
    },
    "source": {
      "type": "object",
      "title": "The Source for the Harvest",
      "required": [
        "type",
        "uri"
      ],
      "properties": {
        "type": {
          "type": "string",
          "title": "The Type of Harvest",
          "enum": [
            "DataJson"
          ]
        },
        "uri": {
          "type": "string",
          "title": "The URL or Location of the Source",
          "examples": [
            "http://demo.getdkan.com/data.json"
          ]
        }
      }
    },
    "transforms": {
      "type": "array",
      "title": "The Transforms for the Harvest",
      "additionalProperties": false,
      "items": {
        "anyOf": [
          {
            "type": [
              "object"
            ],
            "title": "The Items Schema",
            "properties": {
              "Filter": {
                "type": "object",
                "title": "The Filter to use on the harvest"
              },
              "Override": {
                "type": "object",
                "title": "The Filter to use on the harvest"
              }
            }
          },
          {
            "type": "string",
            "enum": [
              "DataJsonToDkan", "Transform"
            ]
          }
        ]
      }
    },
    "load": {
      "type": "object",
      "title": "The Load settings for the Harvest",
      "required": [
        "migrate",
        "collectionsToUpdate",
        "type"
      ],
      "properties": {
        "migrate": {
          "type": "boolean",
          "title": "Whether or not to fully pull in the source",
          "default": false,
          "examples": [
            false
          ]
        },
        "collectionsToUpdate": {
          "type": "array",
          "title": "The Collections from the source to update in the catalog",
            "description":"These collection should be defined i the active schema. ",
          "items": {
            "type": "string",
            "examples": [
              "dataset",
              "organization",
              "license",
              "theme",
              "keyword"
            ],
            "pattern": "^(.*)$"
          }
        },
        "type": {
          "type": "string",
          "title": "The location to load the harvest.",
          "default": "Dkan8",
          "enum": ["Dkan8", "Dataset"]
        }
      }
    }
  }
}
